<?xml version="1.0" encoding="UTF-8"?>

<ui namespace="DribbbleBoardCell_iPhone">
	
	<linear orientation="v" class="wrapper">
		<image class="bg"/>
		<image id="photo" class="photo"/>
		<linear orientation="h" class="bottom-line">
			<image id="view-icon" class="bottom-icon"/>
			<label id="view-num" class="bottom-text">0</label>
			<image id="comment-icon" class="bottom-icon"/>
			<label id="comment-num" class="bottom-text">0</label>
			<image id="like-icon" class="bottom-icon"/>
			<label id="like-num" class="bottom-text">0</label>
		</linear>
		<button id="mask"/>
	</linear>
	
	<style type="text/css">
		.wrapper {
			width: 100%;
			height: auto;
			padding: 2px;
			margin-top: 2px;
		}
		
		.bg {
			width: 100%;
			height: 100%;
			position: absolute;
			left: 0px;
			top: 0px;
			background-color: white;
//			shadow-color: black 0.2;
//			shadow-offset: 0.5px 0.5px;
//			shadow-opacity: 1.0;
//			shadow-radius: 2px;
		}

		.photo {
			width: 100%;
			height: 160px;
			padding: 5px;
			background-color: #999;
			image-mode: fill;
			image-loading: white;
		}
		
		.bottom-line {
			width: auto;
			height: 16px;
			padding-left: 5px;
			padding-right: 5px;
			margin-bottom: 8px;
		}
		
		.bottom-icon {
			width: 15px;
			height: 100%;
			margin-left: 2px;
			margin-right: 2px;
			image-mode: center;
		}
		
		.bottom-text {
			width: auto;
			height: 100%;
			margin-left: 2px;
			margin-right: 6px;
			color: #999;
			font-size: 12px;
			font-weight: bold;
		}
		
		#view-icon {
			image-src: url(icon-views.png);
		}

		#comment-icon {
			image-src: url(icon-comments.png);
		}

		#like-icon {
			image-src: url(icon-hearts.png);
		}

		#mask {
			width: 100%;
			height: 100%;
			position: absolute;
			left: 0px;
			top: 0px;
		}

	</style>
	
</ui>
