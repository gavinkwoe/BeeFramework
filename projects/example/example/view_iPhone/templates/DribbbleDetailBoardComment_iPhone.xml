		<linear orientation="v" class="right-wrapper">
			<label id="name" class="name"/>
			<label id="text" class="text"></label>
			<label id="time" class="time"></label>
		</linear>
	</linear>

    <style type="text/css">
		
		.wrapper {
			width: 100%;
			height: auto;
			margin-top: 10px;
		}

		.avatar {
			width: 44px;
			height: 44px;
			padding: 2px;
			margin-left: 10px;
			background-color: #999;
			border-radius: 6px;
			border-width: 2px;
			border-color: white;
			image-mode: fill;
			image-loading: white;
		}

		.right-wrapper {
			width: 246px;
			height: auto;
			margin-left: 10px;
		}

