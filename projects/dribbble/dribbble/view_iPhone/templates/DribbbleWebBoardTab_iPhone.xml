<?xml version="1.0" encoding="utf-8" ?>

<template namespace="DribbbleWebBoardTab_iPhone" version="1">

    <linear class="wrapper" orientation="h">
		<image id="bg"/>
		<button id="go_backward"/>
		<button id="go_forward"/>
		<button id="refresh"/>
    </linear>

    <style type="text/css">
		
        .wrapper {
			width: 100%;
			height: 100%;
			float: center;
        }

		#bg {
			background-color: #333;
			image-src: url(tab-bar.png) !important;
			image-mode: fit;
			position: absolute;
			left: 0;
			top: 0;
		}

		#go_backward {
			position: absolute;
			left: 10;
			top: 0;
			width: 44px;
			height: 100%;
		}

		#go_forward {
			position: absolute;
			left: 54px;
			top: 0;
			width: 44px;
			height: 100%;
		}

		#refresh {
			position: absolute;
			right: 0;
			top: 0;
			width: 44px;
			height: 100%;
		}

    </style>
</template>
