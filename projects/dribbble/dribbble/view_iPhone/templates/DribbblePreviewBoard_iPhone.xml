<?xml version="1.0" encoding="UTF-8"?>

<ui namespace="DribbblePreviewBoard_iPhone">

	<linear orientation="v" class="wrapper">
		<zoom-image id="preview" class="fullscreen"/>
	</linear>

	<style type="text/css">
		
		.wrapper {
			width: 100%;
			height: 100%;
		}
		
		.fullscreen {
			position: absolute;
			width: 100%;
			height: 100%;
			mode: fit;
			background-color: #333;
			image-loading: white;
		}

		@media(device:iOS7)
		{
			#preview {
				padding-bottom: 0px;
				insets: 0 0 44 0;
			}
		}

	</style>

</ui>
