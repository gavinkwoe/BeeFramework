<?xml version="1.0" encoding="UTF-8"?>

<template namespace="DribbbleDetailBoardPhoto_iPhone" version="1">
	
	<linear orientation="v" class="wrapper">
		<button id="mask"/>
		<image class="bg"/>
		<image id="photo" class="photo"/>
		<linear orientation="h" class="bottom">
			<image class="icon" id="view-icon" src="icon-views.png"/>
			<label class="text" id="view-num">0</label>
			<image class="icon" id="comment-icon" src="icon-comments.png"/>
			<label class="text" id="comment-num">0</label>
			<image class="icon" id="like-icon" src="icon-hearts.png"/>
			<label class="text" id="like-num">0</label>
		</linear>
	</linear>
	
	<style type="text/css">
		
		.wrapper {
			width: 100%;
			height: auto;
			margin-bottom: 4px;
			padding-left: 6px;
			padding-right: 6px;
		}
		
		.bg {
			width: 100%;
			height: 100%;
			position: absolute;
			left: 0px;
			top: 0px;
			background-color: #fafafa;
		}

		.photo {
			width: 100%;
			height: 320px;
			padding: 3px;
			background-color: #999;
			image-mode: fill;
			image-loading: white;
		}
		
		.bottom {
			width: auto;
			height: 16px;
			padding-left: 5px;
			padding-right: 5px;
			margin-bottom: 3px;
		}
	
		.bottom > .icon {
			width: 15px;
			height: 100%;
			image-mode: center;
			margin-left: 5px;
		}
		
		.bottom > .text {
			width: auto;
			height: 100%;
			color: #999;
			font-size: 12px;
			font-weight: lighter;
			margin-left: 5px;
		}
		
		#mask {
			width: 100%;
			height: 100%;
			position: absolute;
			left: 0px;
			top: 0px;
		}

	</style>
	
</template>
