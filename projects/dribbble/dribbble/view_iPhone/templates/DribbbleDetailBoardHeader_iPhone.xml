<?xml version="1.0" encoding="UTF-8"?>

<template namespace="DribbbleDetailBoardHeader_iPhone" version="1">
	<linear orientation="v" class="wrapper">
		<linear orientation="h" class="player-wrapper">
			<image id="avatar" class="avatar"/>
			<linear orientation="v" class="player-right-wrapper">
				<label id="title" class="title"/>
				<linear orientation="h" class="player-name-wrapper">
					<label class="gray-text">by</label>
					<label id="name" class="name"></label>
					<label id="time" class="gray-text"></label>
				</linear>
			</linear>
		</linear>
		<linear orientation="v" class="photo-wrapper">
			<image class="bg"/>
			<image id="photo" class="photo"/>
			<linear orientation="h" class="bottom">
				<image class="icon" id="view-icon" src="icon-views.png"/>
				<label class="text" id="view-num">0</label>
				<image class="icon" id="comment-icon" src="icon-comments.png"/>
				<label class="text" id="comment-num">0</label>
				<image class="icon" id="like-icon" src="icon-hearts.png"/>
				<label class="text" id="like-num">0</label>
			</linear>
		</linear>
	</linear>
	<style type="text/css">
		
		.wrapper {
			width: 100%;
			height: auto;
			margin-top: 10px;
			margin-bottom: 10px;
			padding-left: 6px;
			padding-right: 6px;
		}

		.player-wrapper {
			width: 100%;
			height: 44px;
			margin-bottom: 10px;
		}
		
		.avatar {
			width: 44px;
			height: 44px;
			padding: 2px;
			background-color: #999;
			border-radius: 6px;
			border-width: 2px;
			border-color: white;
			image-mode: fill;
			image-loading: white;
		}
		
		.player-right-wrapper {
			width: auto;
			height: 100%;
			margin-left: 6px;
		}
		
		.title {
			width: auto;
			height: 50%;
			font-size: 14px;
			font-weight: bold;
			color: white;
		}
		
		.player-name-wrapper {
			width: auto;
			height: 50%;
		}

		.gray-text {
			width: auto;
			height: 100%;
			font-size: 12px;
			font-weight: bold;
			color: #999;
		}
		
		.name {
			width: auto;
			height: 100%;
			font-size: 12px;
			font-weight: bold;
			color: white;
			margin-left: 6px;
			margin-right: 6px;
		}
		
		.photo-wrapper {
			width: 100%;
			height: auto;
		}
		
		.bg {
			width: 100%;
			height: 100%;
			position: absolute;
			left: 0px;
			top: 0px;
			background-color: white;
		}

		.photo {
			width: 100%;
			height: 320px;
			padding: 3px;
			background-color: #999;
			image-mode: fill;
			image-loading: white;
		}
		
		.bottom {
			width: auto;
			height: 16px;
			padding-left: 5px;
			padding-right: 5px;
			margin-bottom: 3px;
		}
	
		.bottom > .icon {
			width: 15px;
			height: 100%;
			image-mode: center;
			margin-left: 5px;
		}
		
		.bottom > .text {
			width: auto;
			height: 100%;
			color: #999;
			font-size: 12px;
			font-weight: bold;
			margin-left: 5px;
		}
	
	</style>
</template>
