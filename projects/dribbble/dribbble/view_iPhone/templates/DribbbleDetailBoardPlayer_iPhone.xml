<?xml version="1.0" encoding="UTF-8"?>

<template namespace="DribbbleDetailBoardPlayer_iPhone" version="1">
	
	<linear orientation="v" class="wrapper">
		<button id="mask"/>
		<image id="avatar" class="avatar"/>
		<linear orientation="v" class="player-right-wrapper">
			<label id="title" class="title"/>
			<linear orientation="h" class="player-name-wrapper">
				<label class="gray-text">by</label>
				<label id="name" class="name"></label>
				<label id="time" class="gray-text"></label>
			</linear>
		</linear>
		<!-- <image class="arrow"/> -->
	</linear>
	
	<style type="text/css">
		
		.wrapper {
			width: 100%;
			height: 44px;
			margin-top: 4px;
			margin-bottom: 5px;
			padding-left: 4px;
			padding-right: 4px;
		}
		
		.avatar {
			width: 44px;
			height: 44px;
			padding: 2px;
			background-color: #999;
		/*	border-radius: 6px; */
			border-width: 2px;
			border-color: white;
			image-mode: fill;
			image-loading: white;
		}
		
		.player-right-wrapper {
			width: auto;
			height: 100%;
			margin-left: 6px;
		}
		
		.title {
			width: 100%;
			height: auto;
			font-size: 13px;
			font-weight: lighter;
			color: white;
			margin-top: 2px;
		}
		
		.player-name-wrapper {
			width: auto;
			height: 50%;
		}

		.gray-text {
			width: auto;
			height: 100%;
			font-size: 13px;
			font-weight: lighter;
			color: #999;
		}
		
		.name {
			width: auto;
			height: 100%;
			font-size: 13px;
			font-weight: lighter;
			color: white;
			margin-left: 6px;
			margin-right: 6px;
		}
		
		.arrow {
			position: absolute;
			right: 0px;
			top: 0px;
			width: 44px;
			height: 100%;
			image-mode: center;
			image-src: url(navigation-forward.png);
		}
		
		#mask {
			width: 100%;
			height: 100%;
			position: absolute;
			left: 0px;
			top: 0px;
		}

	</style>
	
</template>
