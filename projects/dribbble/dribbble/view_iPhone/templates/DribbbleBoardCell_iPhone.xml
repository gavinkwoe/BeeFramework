<?xml version="1.0" encoding="UTF-8"?>

<ui namespace="DribbbleBoardCell_iPhone">
	<linear orientation="v" class="wrapper">
		<image class="bg"/>
		<image id="photo" class="photo"/>
		<linear orientation="h" class="bottom">
			<image class="icon" id="view-icon" src="icon-views.png"/>
			<label class="text" id="view-num">0</label>
			<image class="icon" id="comment-icon" src="icon-comments.png"/>
			<label class="text" id="comment-num">0</label>
			<image class="icon" id="like-icon" src="icon-hearts.png"/>
			<label class="text" id="like-num">0</label>
		</linear>
		<button id="mask" class="mask"/>
	</linear>

	<style type="text/css">
		.wrapper {
			width: 100%;
			height: 100%;
			padding: 2px;
			margin-top: 2px;
		}

		.bg {
			width: 100%;
			height: 100%;
			position: absolute;
			left: 0px;
			top: 0px;
			background-color: white;
		}

		.bgc {
			background-color: #369;
		}
		
		.photo {
			width: 100%;
			height: 88%;
			padding: 3px;
			background-color: #999;
			image-mode: fill;
			image-loading: white;
		}
		
		.bottom {
			width: auto;
			height: 12%;
			padding-left: 5px;
			padding-right: 5px;
			margin-bottom: 2%;
		}

		.bottom > .icon {
			width: 15px;
			height: 100%;
			image-mode: center;
			margin-left: 4px;
			margin-right: 2px;
		}
		
		.bottom > .text {
			width: auto;
			height: 100%;
			color: #999;
			font-size: 12px;
			font-weight: bold;
			margin-left: 5px;
		}
		
		.mask {
			width: 100%;
			height: 100%;
			position: absolute;
			left: 0px;
			top: 0px;
		}
		
		</style>
	
</ui>
