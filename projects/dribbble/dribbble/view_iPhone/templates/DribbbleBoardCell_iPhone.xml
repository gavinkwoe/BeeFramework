<?xml version="1.0" encoding="UTF-8"?>

<ui namespace="DribbbleBoardCell_iPhone">
    <linear orientation="v" class="wrapper">
        <button id="mask" class="mask"/>
        <image class="bg"/>
        <image id="photo" class="photo"/>
        <linear orientation="h" class="bottom">
            <image class="icon" id="view-icon" src="icon-views.png"/>
            <label class="text" id="view-num">0</label>
            <image class="icon" id="comment-icon" src="icon-comments.png"/>
            <label class="text" id="comment-num">0</label>
            <image class="icon" id="like-icon" src="icon-hearts.png"/>
            <label class="text" id="like-num">0</label>
        </linear>
        <image id="avatar" class="avatar"/>
    </linear>
    
    <style type="text/css">
        .wrapper {
            width: 100%;
            height: 100%;
            padding: 2px;
            margin-top: 2px;
        }
    
    .bg {
        width: 100%;
        height: 100%;
        position: absolute;
        left: 0px;
        top: 0px;
        background-color: #fafafa;
    }
    
    .photo {
        width: 100%;
        height: 100%;
        padding-top: 3px;
        padding-bottom: 22px;
        padding-left: 3px;
        padding-right: 3px;
        background-color: #999;
        image-mode: fill;
        image-loading: white;
    }
    
    .avatar {
        position: absolute;
        bottom: 25px;
        right: 6px;
        width: 44px;
        height: 44px;
        padding: 2px;
        background-color: #999;
        /*	border-radius: 6px; */
        border-width: 2px;
        border-color: #fafafa;
        image-mode: fill;
        image-loading: white;
    }
    
    .bottom {
        position: absolute;
        left: 0px;
        bottom: 3px;
        width: 100%;
        height: 16px;
        padding-left: 5px;
        padding-right: 5px;
    }
    
    .bottom > .icon {
        width: 15px;
        height: 100%;
        image-mode: center;
        margin-left: 4px;
        margin-right: 1px;
    }
    
    .bottom > .text {
        width: auto;
        height: 100%;
        color: #999;
        font-size: 12px;
        font-weight: lighter;
        margin-left: 2px;
    }
    
    .mask {
        width: 100%;
        height: 100%;
        position: absolute;
        left: 0px;
        top: 0px;
    }
    
        </style>
    
</ui>
